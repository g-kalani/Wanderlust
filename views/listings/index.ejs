<% layout("/layouts/boilerplate") -%>
<h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card col listing-card" style="width: 20rem;">
                <% const safeImg = (listing.image && listing.image.url) ? listing.image.url.replace(/\s+/g, '') : 'https://via.placeholder.com/600x400?text=No+Image'; %>
                <img src="<%= safeImg %>" class="card-img-top" alt="listing_image" style="height: 20rem" onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=No+Image'" data-orig="<%= listing.image && listing.image.url %>">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    &#8377 <%= listing.price.toLocaleString("en-IN") %>
                  </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
