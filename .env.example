# Copy this file to .env and fill in your actual values before running the app locally.
# The app loads environment variables from .env when NODE_ENV !== "production".
# IMPORTANT: Never commit .env with real secrets to version control!

# MongoDB Atlas connection string
# Get it from: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
ATLAS_DB=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/wanderlust?retryWrites=true&w=majority

# Cloudinary credentials (for image uploads)
# Sign up at https://cloudinary.com and get these from your dashboard
CLOUD_NAME=your_cloud_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret

# Session secret (used for signing session cookies)
# Generate a strong random string for security
SESSION_SECRET=your_strong_random_secret_key_here

# Optional: Set to "development" for local development
# NODE_ENV=development
